<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/bundles/css/site")
    </head>
    <body>
        <div id="wrapper">
            <header>
                <div class="container">
                    <div class="row">
                        <div class="span12">
                            <h1>Rock, Paper, Winners!</h1>
                        </div>
                    </div>
                </div>
            </header>
            <div id="body">
                <div class="container">
                    <div class="row">
                        <div class="span12">      
                            <div id="content">
                                @RenderBody()
                            </div>                  
                        </div>
                    </div>
                    <div class="row">
                        <div class="span12">
                            <div id="underbody">
                                @RenderSection("underbody", false)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <p>
                            &copy; @DateTime.Now.Year - Those Guys We Are
                        </p>
                    </div>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/js/jquery")
        @Scripts.Render("~/bundles/js/jqueryval")
        @Scripts.Render("~/bundles/js/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
